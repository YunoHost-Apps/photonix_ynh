[Unit]
Description=Photonix watch_photos
After=network.target __APP__-app_server.service

[Service]
Type=simple
User=__APP__
Group=__APP__
WorkingDirectory=__INSTALL_DIR__/srv/photonix
EnvironmentFile=__INSTALL_DIR__/photonix.env
ExecStart=/usr/bin/env bash -c "PATH=__INSTALL_DIR__/venv/bin:$PATH nice -n 16 __INSTALL_DIR__/photonix/manage.py watch_photos"
StandardOutput=append:/var/log/__APP__/__APP__-watch_photos.log
StandardError=inherit

[Install]
WantedBy=multi-user.target
